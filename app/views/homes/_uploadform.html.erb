          <div class="col-md-12">
            <form id="photo-upload-form" action="" method="">
              <div class="form-group">
                <label for="upload-photo">Upload Your Photo</label>
                <input type="file" name="user-photo" /><br />
              </div>
              <div class="form-group">
                <label for="desc-photo">Description</label>
                <input type="text" name="photo-description"/><br />
              </div>
            </form>
          </div>
        </div>
      <div class="modal-footer">
        <input type="submit" id="upload-btn" value="Upload" />
        <button type="button" class="btn btn-primary">Upload</button>
      </div>
    </div>
  </div>
</div>